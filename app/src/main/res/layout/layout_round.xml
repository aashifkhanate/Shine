<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rli"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/background_edit_text"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:padding="5dp"
            android:id="@+id/lay_round_number"
            android:paddingEnd="50dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round 1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="24sp"/>
        <ImageView
            android:id="@+id/unlocked"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/lay_round_name"
            android:layout_gravity="right"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/round_unlocked" />

    </LinearLayout>

    <TextView
        android:id="@+id/lay_round_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:padding="5dp"
        android:text="Written Test"
        android:textColor="#ff4000"
        android:textStyle="italic"
        android:textSize="20dp" />


    <ImageView
        android:id="@+id/selected"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lay_round_name"
        android:layout_gravity="left"
        android:padding="10dp"
        android:src="@drawable/ic_access_time_black_24dp" />
        <!--android:src="@drawable/icon_selected" />-->

    <ImageView
        android:id="@+id/nselected"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/lay_round_name"
        android:layout_gravity="left"
        android:layout_marginStart="120dp"
        android:padding="10dp"
        android:src="@drawable/ic_access_time_black_24dp" />
        <!--android:src="@drawable/icon_not_selected" />-->

    <ImageView
        android:id="@+id/completed"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/lay_round_name"
        android:layout_gravity="left"
        android:layout_marginStart="250dp"
        android:padding="10dp"
        android:src="@drawable/ic_access_time_black_24dp" />
        <!--android:src="@drawable/round_completed" />-->


    <TextView
        android:id="@+id/tselected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:text="Selected"
        android:textColor="#000080"
        android:layout_below="@+id/selected"
        android:textStyle="italic"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tnselected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Not Selected"
        android:textColor="#000080"
        android:layout_below="@+id/nselected"
        android:textStyle="italic"
        android:layout_marginStart="120dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tcompleted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Round Completed"
        android:textColor="#000080"
        android:layout_below="@+id/nselected"
        android:textStyle="italic"
        android:layout_marginStart="250dp"
        android:textSize="18dp" />



</RelativeLayout>

