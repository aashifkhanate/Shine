<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:padding="12dp">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/tv_coords_phone_no"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/iconusermale"
            android:tint="#000" />

        <TextView
            android:id="@+id/tv_coords_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/photo"
            android:text="[Full Name]"
            android:textColor="#000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_coords_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_coords_name"
            android:layout_alignStart="@+id/tv_coords_name"
            android:layout_toRightOf="@+id/photo"
            android:layout_below="@+id/tv_coords_name"
            android:text="[Phone Number]"
            android:textSize="12dp"
            android:textColor="#8f8f8f" />

    </RelativeLayout>


</LinearLayout>
